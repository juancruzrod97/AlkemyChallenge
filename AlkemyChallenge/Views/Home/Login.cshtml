@model  AlkemyChallenge.Models.VM_Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-md-9">
        <ul class="nav nav-tabs md-tabs nav-justified">
            <li class="nav-item border">
                <a class="nav-link" data-toggle="tab" href="#admin" role="tab">Admin</a>
            </li>
            <li class="nav-item border">
                <a class="nav-link" data-toggle="tab" href="#student" role="tab">Student</a>
            </li>
        </ul>
        <div class="tab-content card">
            <div class="tab-pane fade in show active" id="admin" role="tabpanel">
                <div class="col-md-8">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("Type", "a")
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username)
                            @Html.TextBoxFor(m => m.Username, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group md-form offset-md-2">
                            <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                        </div>
                    }
                </div>

            </div>
            <div class="tab-pane fade" id="student" role="tabpanel">
                <div class="col-md-8">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("Type", "s")
                        <div class="form-group">
                            @Html.LabelFor(m => m.Dni)
                            @Html.TextBoxFor(m => m.Dni, "", new { @class = "form-control", @placeholder = "Dni" })
                            @Html.ValidationMessageFor(m => m.Dni, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Docket)
                            @Html.PasswordFor(m => m.Docket, new { @class = "form-control", @placeholder = "Docket" })
                            @Html.ValidationMessageFor(m => m.Docket, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group md-form offset-md-2">
                            <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
